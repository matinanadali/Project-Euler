<!DOCTYPE html>
<html>
<head>
    <title>Largest Prime Factor</title>
</head>
<body>
    <h1>Largest Prime Factor Calculation</h1>
    <%
    // Function to find the largest prime factor
    function largestPrimeFactor(n) {
        let largest = 0;
        
        // Remove all factors of 2
        while (n % 2 === 0) {
            largest = 2;
            n /= 2;
        }
        
        // Remove all factors of odd numbers
        for (let i = 3; i * i <= n; i += 2) {
            while (n % i === 0) {
                largest = i;
                n /= i;
            }
        }
        
        // If n is a prime number greater than 2
        if (n > 2) {
            largest = n;
        }
        
        return largest;
    }

    // Define the number and find the largest prime factor
    const number = 600851475143;
    const result = largestPrimeFactor(number);

    // Print the result
    %>
    <p>The largest prime factor of <%= number %> is <%= result %></p>
</body>
</html>
